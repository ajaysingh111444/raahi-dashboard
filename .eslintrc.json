{
  "env": {
    "es6": true,
    "node": true,
    "jasmine": false
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "rules": {
    "indent": ["error", 4],
    "linebreak-style": ["error", "windows"],
    "semi": ["error", "always"],
    "no-var": "error",
    "no-console": ["warn", { "allow": ["log", "warn", "error"] }]
  }
}